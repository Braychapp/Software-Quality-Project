<Window x:Class="Software_Quality_Project_UI.AcceptCustomers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Quality_Project_UI"
        mc:Ignorable="d"
        Title="AcceptCustomers" Height="450" Width="800">
    <Grid>
        <Label Content="Accept Customers" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top" FontSize="22"/>
        <ComboBox x:Name="OrderSelect" HorizontalAlignment="Left" Margin="38,98,0,0" VerticalAlignment="Top" Width="191" Height="41" SelectionChanged="ComboBox_SelectionChanged"/>
        <TextBox x:Name="OrderInfo" HorizontalAlignment="Left" Margin="307,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="438" Height="264" FontSize="16"/>
        <Label Content="Order Information" HorizontalAlignment="Left" Margin="433,75,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button x:Name="AcceptOrder" Content="Accept Order" HorizontalAlignment="Left" Margin="64,293,0,0" VerticalAlignment="Top" Height="59" Width="139" FontSize="22" Click="AcceptOrder_Click"/>
    </Grid>
</Window>
