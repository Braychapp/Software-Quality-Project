    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="159*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="87,49,0,0" TextWrapping="Wrap" Text="Below are all the actice orders" VerticalAlignment="Top" Grid.Column="1"/>
