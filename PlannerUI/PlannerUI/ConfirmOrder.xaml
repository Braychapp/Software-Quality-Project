    <Window x:Class="PlannerUI.ConfirmOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlannerUI"
        mc:Ignorable="d"
        Title="ConfirmOrder" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="60,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Below are orders that you can select and"/><Run Language="en-ca" Text=" confirm"/></TextBlock>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="60,59,450,144"/>
        <Button Content="Confirm the selected order" Margin="60,317,575,68"/>
        <Button Click="Button_Click" Content="Navigate to Planner Menu" HorizontalAlignment="Left" Margin="60,4,0,0" VerticalAlignment="Top" Height="29" Width="149"/>

    </Grid>
</Window>
